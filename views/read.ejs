<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./Stylesheet/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900" >
    <div class="w-full h-full p-10 text-white ">
        <a href="/" class="text-blue-300">Back to Home</a>
        <h1 class="m-3 text-3xl">All User</h1>
        <div class="users flex flex-wrap gap-4">
            <% users.forEach((users)=>{ %>
                <div class="user w-82 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
                        <img class="w-full h-full object-cover" src="<%= users.image%>" alt="Image Unavailable" >
                    </div>
                    <h3 class="text-xl mt-3 tracking-tracker"><%= users.name %></h3>
                    <h5 class="text-zinc-500"><%= users.email %></h5>
                    <div class="flex gap-3 mt-10">
                        <a href="/edit/<%= users._id%>" class="text-zinc-500">Edit User</a>
                        <a href="/delete/<%=users._id%>" class="text-red-600">Delete User</a>
                </div>
            </div>
            <% }) %>

        </div>
    </div>
</body>
</html>